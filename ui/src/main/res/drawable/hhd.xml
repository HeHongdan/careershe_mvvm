<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--背景-->
    <item
        android:width="351dp"
        android:height="44dp">
        <shape android:shape="rectangle">
            <solid android:color="#8880" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>


    <!--线-->
    <item
        android:width="349dp"
        android:height="1dp"
        android:left="1dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="0.0"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0.0">
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="#990000"
                    android:startColor="#990000"
                    android:type="linear"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="1dp"
        android:height="44dp"
        android:left="0dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="0.0"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0.0">
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="#990000"
                    android:startColor="#990000"
                    android:type="linear"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="1dp"
        android:height="44dp"
        android:left="350dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="0.0"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0.0">
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="#990000"
                    android:startColor="#990000"
                    android:type="linear"
                    android:useLevel="false" />
            </shape>
        </rotate>
    </item>

</layer-list>














