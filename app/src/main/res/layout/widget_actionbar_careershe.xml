<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ab_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_icon_size_def"
    tools:background="@color/foreground"
    tools:context=".widget.actionbar.ActionBarCareershe"
    >

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        tools:background="#3333">

        <com.hehongdan.actionbarex.ActionIconView
            android:id="@+id/iv_left"
            style="@style/ActionBarCareershe_ActionIconView"
            android:src="@drawable/ic_back"

            tools:background="#3333"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_left"
            style="@style/ActionBarCareershe_ActionTextView"

            tools:text="返回"
            tools:visibility="visible" />

    </LinearLayout>

    <!--android:layout_marginRight="12dp"-->
    <TextView
        android:id="@+id/tv_title"
        style="@style/ActionBarCareershe_TitleTextView"

        tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题" />



    <!-- android:scaleType="fitCenter"-->
    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_21"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"

        tools:src="@drawable/ic_icon_text"
        tools:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_right"
            style="@style/ActionBarCareershe_ActionTextView"

            tools:text="确定"
            tools:visibility="visible"/>

        <com.hehongdan.actionbarex.ActionIconView
            android:id="@+id/iv_right"
            style="@style/ActionBarCareershe_ActionIconView"
            android:src="@drawable/ic_unstar"

            tools:background="#3333"
            tools:visibility="visible" />

    </LinearLayout>


</RelativeLayout>